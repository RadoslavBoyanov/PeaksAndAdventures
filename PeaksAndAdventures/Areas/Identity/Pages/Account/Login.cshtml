@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<link rel="stylesheet" href="~/css/Login&Register/loginAndRegisterStyle.css"/>

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
	<div class="col-md-4 offset-md-4">
		<section>
			<form id="account" method="post">
				<h3>Използвайте локален акаунт, за да влезете.</h3>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-floating">
					<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
					<label asp-for="Input.Email" class="form-label"></label>
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
					<label asp-for="Input.Password" class="form-label"></label>
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div>
					<div class="checkbox">
						<label asp-for="Input.RememberMe" class="form-label">
							<input class="form-check-input" asp-for="Input.RememberMe" />
							Запомни ме!
						</label>
					</div>
				</div>
				<div>
					<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Влез</button>
				</div>
				<div>
					<p>
						<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="w-100 btn btn-lg btn-primary">Регистрирай се като нов потребител</a>
					</p>
				</div>
			</form>
		</section>
	</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
