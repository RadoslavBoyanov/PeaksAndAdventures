@model IEnumerable<PeaksAndAdventures.Core.Models.ViewModels.User.AllUsersViewModel> 

@{
	ViewData["Title"] = "Всички потребители";
}

<h3 class="text-center">@ViewData["Title"]</h3>

<hr/>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Потребителско име</th>
			<th>Имейл</th>
			<th>Изтриване</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model)
		{
			<tr>
				<td>@user.UserName</td>
				<td>@user.Email</td>
				<td>
					<a asp-area="Admin" asp-controller="User" asp-action="GetUserRole" asp-route-id="@user.Id" class="btn btn-outline-primary">Виж роля</a>
				</td>
			</tr>
		}
	</tbody>
</table>
