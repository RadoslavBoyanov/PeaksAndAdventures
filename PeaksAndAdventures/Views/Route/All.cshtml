@model IEnumerable<GetAllRoutesViewModel>

@{
	ViewBag.Title = "Маршрути";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
	@foreach (var route in Model)
	{
		<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
			<div class="card h-100 text-center">
				<img class="card-img-top" src="@route.ImageUrl" alt="Изображение на статията">
				<div class="card-body">
					<h4 class="card-title"><strong>@route.Name</strong></h4>
				</div>
				<a asp-controller="Route" asp-action="Details" asp-route-id="@route.Id" class="btn btn-primary btn-group-sm fw-bold">Прочети</a>
			</div>
		</div>
	}
</div>

<style>
    .card {
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease; /* Плавно променяйте box-shadow при хофвър */
    }

        .card img {
            width: 100%;
            height: auto;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
        }

    .card-body {
        padding: 10px;
    }

    .card-title {
        font-size: 1.2rem;
        margin-bottom: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
        margin-bottom: 10px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .card:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Променете box-shadow при хофвър */
    }
</style>