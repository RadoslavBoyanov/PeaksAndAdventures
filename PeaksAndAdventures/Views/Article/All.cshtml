@model IEnumerable<ArticleAllViewModel>

@{
	ViewBag.Title = "Статии";
}

<h2 class="text-center">@ViewBag.Title</h2>

<div class="row">
	@foreach (var article in Model)
	{
		<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
			<div class="card h-100 text-center">
				<img class="card-img-top" src="@article.ImageUrl" alt="Изображение на статията">
				<div class="card-body">
					<h4 class="card-title"><strong>@article.Title</strong></h4>
				</div>
				<a asp-controller="Article" asp-action="Details" asp-route-id="@article.Id" class="btn btn-primary btn-group-sm fw-bold">Прочети</a>
			</div>
		</div>
	}
</div>

<style>
	.card {
		box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
		transition: 0.3s;
		border-radius: 5px;
	}

		.card:hover {
			box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
		}

		.card img {
			border-top-left-radius: 5px;
			border-top-right-radius: 5px;
		}

	.card-body {
		padding: 20px;
	}

	.card-title {
		font-size: 18px;
	}

	.card-text {
		font-size: 14px;
		color: #6c757d;
	}

	.btn-primary {
		background-color: #007bff;
		border-color: #007bff;
	}

		.btn-primary:hover {
			background-color: #0056b3;
			border-color: #0056b3;
		}
</style>