@model MountainFormViewModel

@{
	ViewBag.Title = "Добавяне на планина";
}

<link rel="stylesheet" href="~/css/CommonForAll/addStyle.css" />

<h2 class="text-center">@ViewBag.Title</h2>
<hr/>


@if (TempData["ErrorMessage"] != null)
{
	<div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Add" method="post" class="mt-4">
	<div class="form-group">
		<label asp-for="Name">Име:</label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Location">Местоположение:</label>
		<textarea asp-for="Location" class="form-control"></textarea>
		<span asp-validation-for="Location" class="text-danger"></span>
	</div>
	
	<div class="form-group">
		<label asp-for="Climate">Климат:</label>
		<textarea asp-for="Climate" class="form-control"></textarea>
		<span asp-validation-for="Climate" class="text-danger"></span>
	</div>
	
	<div class="form-group">
		<label asp-for="Waters">Води:</label>
		<textarea asp-for="Waters" class="form-control"></textarea>
		<span asp-validation-for="Waters" class="text-danger"></span>
	</div>
	
	<div class="form-group">
		<label asp-for="Flora">Флора:</label>
		<textarea asp-for="Flora" class="form-control"></textarea>
		<span asp-validation-for="Flora" class="text-danger"></span>
	</div>
	
	<div class="form-group">
		<label asp-for="Fauna">Фауна:</label>
		<textarea asp-for="Fauna" class="form-control"></textarea>
		<span asp-validation-for="Fauna" class="text-danger"></span>
	</div>
	
	<div class="form-group">
		<label asp-for="ImageUrls">Изображение URL-адрес:</label>
		<textarea asp-for="ImageUrls" class="form-control"></textarea>
		<span asp-validation-for="ImageUrls" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Добави планина</button>
</form>

	
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}