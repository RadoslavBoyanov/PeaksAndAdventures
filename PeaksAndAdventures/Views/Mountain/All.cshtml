@model IEnumerable<AllMountainsViewModel>

@{
	ViewBag.Title = "Планини";
}

<h2 class="text-center mt-4 mb-3">@ViewBag.Title</h2>

@if (Model != null && Model.Count() > 0)
{
	<div class="row">
		@foreach (var mountain in Model)
		{
			<div class="col-lg-2 col-md-2 col-sm-4 mb-6"> <!-- Задайте нужните класове за Bootstrap колоните -->
				<div class="card h-100 w-100 text-center">
					<img class="card-img-top w-100 h-100" src="@mountain.ImageUrls" alt="Mountain Image">
					<div class="card-body">
						<h4 class="card-title"><strong>@mountain.Name</strong></h4>
						</div>
					<a asp-controller="Mountain" asp-action="Details" asp-route-id="@mountain.Id" class="btn btn-primary btn-group-sm fw-bold">Виж повече</a>
					</div>
				</div>
		}
	</div>
}

			
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}