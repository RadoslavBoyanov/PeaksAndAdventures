@model IEnumerable<AllPeaksViewModel>

<h2>Върхове</h2>

@if (!Model.Any())
{
<p>Не са намерени върхове за конкретната планина</p>
}
else
{
	<table class="table">
		<thead>
		<tr>
			<th>Име</th>
			<th>Описание</th>
			<th>Дял</th>
			<th>Местоположение</th>
			<th>Височина</th>
			<th>Изображение</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var peak in Model)
		{
			<tr>
				<td>@peak.Name</td>
				<td>@peak.Description</td>
				<td>@peak.Partition</td>
				<td>@peak.SpecificLocation</td>
				<td>@peak.Altitude</td>
				<td>
					@{
						if (!string.IsNullOrEmpty(peak.ImageUrl))
						{
							<img src="@peak.ImageUrl" alt="@peak.Name" class="img-fluid"/>
						}
						else
						{
							<p>Липсва изображение</p>
						}
					}
				</td>
			</tr>
		}
		</tbody>
	</table>
}


<p>
	@Html.ActionLink("Върни се към всички планини", "All", "Mountain")
</p>