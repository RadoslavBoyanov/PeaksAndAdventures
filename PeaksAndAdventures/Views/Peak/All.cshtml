@model IEnumerable<AllPeaksViewModel>

@{
	ViewBag.Title = "Върхове";

	int totalPages = ViewBag.TotalPages;
	int page = ViewBag.Page;
	int pageSize = ViewBag.PageSize;
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<link rel="stylesheet" href="~/css/Peak/allStyle.css" />

<table class="table table-striped table-hover">
	<thead>
	<tr>
		<th class="text-center">Име</th>
		<th class="text-center">Височина</th>
		<th class="text-center">Планина</th>
		<th class="text-center">Детайли</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var peak in Model)
	{
		<tr class="@(peak.Id % 2 == 0 ? "even-row" : "odd-row")">
			<td class="text-center">@peak.Name</td>
			<td class="text-center">@peak.Altitude</td>
			<td class="text-center">@peak.MountainName</td>
			<td class="text-center">
				<a asp-action="Details" asp-route-id="@peak.Id" class="btn btn-info btn-details">Детайли</a>
			</td>
		</tr>
	}
	</tbody>
</table>

@await Html.PartialAsync("_PaginationPartial")

<a asp-controller="Peak" asp-action="AddPeak" class="btn btn-primary btn-group-sm fw-bold">Добави връх</a>
