@model IEnumerable<GetAllRoutesViewModel>

@{
	ViewBag.Title = "Маршрути до върха";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@{
	if (Model.Any())
	{
		@await Html.PartialAsync("_AllRoutesPartial")
	}
	else
	{
		<h3 class="text-center text-warning">Няма добавени маршрути до върха.</h3>
		@if (User.IsAdmin() || User.IsTourAgency() || User.IsMountaineer())
		{
			<p class="text-center">Добави маршрут до тази връх, ако знаеш.</p>
			<a asp-controller="Route" asp-action="Add" class="btn btn-primary btn-group-sm fw-bold">Добави</a>
		}
	}
}

