@model ExpeditionAddViewModel

@{
	ViewBag.Title = "Добавяне на екседиция";
}

<h2>@ViewBag.Title</h2>
<hr/>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Enrolment"></label>
        <input asp-for="Enrolment" class="form-control" />
        <span asp-validation-for="Enrolment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Days"></label>
        <input asp-for="Days" class="form-control" />
        <span asp-validation-for="Days" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Program"></label>
        <textarea asp-for="Program" class="form-control"></textarea>
        <span asp-validation-for="Program" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Includes"></label>
        <textarea asp-for="Includes" class="form-control"></textarea>
        <span asp-validation-for="Includes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Excludes"></label>
        <textarea asp-for="Excludes" class="form-control"></textarea>
        <span asp-validation-for="Excludes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Extras"></label>
        <textarea asp-for="Extras" class="form-control"></textarea>
        <span asp-validation-for="Extras" class="text-danger"></span>
    </div>

    <div class="form-group">
	    <label asp-for="RouteId"></label>
	    <select asp-for="RouteId" asp-items="@(new SelectList(Model.Routes, "Id", "Name"))" class="form-control">
		    <option value="">Избери маршрут</option>
	    </select>
	    <span asp-validation-for="RouteId" class="text-danger"></span>
    </div>
    <div class="form-group">
	    <label asp-for="TourAgencyId"></label>
        <select asp-for="TourAgencyId" asp-items="@(new SelectList(Model.TourAgencies, "Id", "Name"))" class="form-control">
		    <option value="">Избери агенция</option>
	    </select>
        <span asp-validation-for="TourAgencyId" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="OrganiserId" value="@ClaimsPrincipalExtensions.Id(User)" />

    <button type="submit" class="btn btn-primary">Добави</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}